@model AgreementViewModel
@{
    ///_Layout = null

}

<div class="row">
    <div class="col-md-12">
        <div class="">
            <div class="">
                <form asp-controller="Project" asp-action="EditAgreement" method="post" id="frmAgreement">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group row">
                            <label asp-for="ProductGroupId" class="col-md-3 col-sm-3 col-form-label"> Product Group</label>

                            <div class="col-md-7 col-sm-7">


                                <select asp-for="ProductGroupId" asp-items="@(new SelectList(Model.ProductGroupList,"Value","Text"))" class="form-control input-sm" required>
                                    <option>-- Please select --</option>
                                </select>
                            </div>


                        </div>
                        <div class="form-group row">
                            <label asp-for="ProductId" class="col-md-3 col-sm-3 col-form-label">Product</label>

                            <div class="col-md-7 col-sm-7">
                                <select asp-for="ProductId" asp-items="@(new SelectList(Model.ProductList,"Value","Text"))" class="form-control input-sm" required>
                                    <option>-- Please select --</option>
                                </select>
                                <span class="text-danger"></span>
                            </div>

                        </div>

                        <div class="form-group row">
                            <label asp-for="EffectiveDate" class="col-md-3 col-sm-3 col-form-label"></label>
                            <div class="col-md-7 col-sm-3 input-group date" data-date-format="MM/dd/yyyy">
                                <input asp-for="EffectiveDate" class="form-control" autocomplete="off"  required />
                                <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                            </div>



                        </div>
                        <div class="form-group row">
                            <label asp-for="ExpirationDate" class="col-md-3 col-sm-3 col-form-label"></label>
                            <div class="col-md-7 col-sm-7 input-group clsInputdate" data-provide="datepicker">
                                <input asp-for="ExpirationDate" class="form-control input-sm date" autocomplete="off" required />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="NewPrice" class="col-md-3 col-sm-3 col-form-label"></label>
                            <div class="col-md-7 col-sm-7">
                                <input asp-for="NewPrice" class="form-control" required />
                                <span asp-validation-for="NewPrice" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-3 col-sm-2 col-form-label">
                                Active
                            </label>
                            <div class="col-md-7 col-sm-2">
                                <label class="checkbox-inline">
                                    <input type="checkbox" asp-for="IsActive" class="" />
                                </label>
                            </div>

                        </div>





                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts
{
