@{
    ViewData["Title"] = "Home Page";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/DataTables/datatables.css" rel="stylesheet" />
<link href="~/lib/jqueryui/themes/ui-lightness/jquery-ui.min.css" rel="stylesheet" />
<link href="~/lib/jqueryui/themes/ui-lightness/theme.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/site.css" />
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <div class="">
            Manage
        </div>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="align-content-end p-2">
                <div class="d-flex">
                    <div>

                    </div>
                    <div class="ml-auto">
                        <a class="btn btn-outline-primary btn-sm" onclick="AddEditAgreement(0);">
