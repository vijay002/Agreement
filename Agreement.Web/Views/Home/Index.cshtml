                            Add New Agreement
                        </a>
                    </div>
                </div>
                <br />
                <div class="portlet">
                    <div class="portlet-title">

                    </div>
                    <div class="portlet-body">

                        <table id="tblAgreementDataGrid">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Product</th>
                                    <th>ProductGroup</th>
                                    <th>EffectiveDate</th>
                                    <th>ExpirationDate</th>
                                    <th>ProductPrice</th>
                                    <th>NewPrice</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody></tbody>


                        </table>
                    </div>
                </div>
                <div class="ibox-footer">
                </div>
            </div>
        </div>
    </div>
</div>


<div class="text-center">

</div>

@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script src="~/lib/DataTables/datatables.js"></script>
    <script src="~/lib/bootbox.min.js"></script>
    <script src="~/js/views/product/agreement.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            LoadGrid();
        });
    </script>

